<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/tab_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radiogroup_background"
        android:padding="2dp"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <com.android.phoneassistant.view.CustomRadioButton
            android:id="@+id/call_log_radio"
            style="@style/tab_radio_button"
            android:text="@string/call_log"
            />

        <com.android.phoneassistant.view.CustomRadioButton
            android:id="@+id/black_radio"
            style="@style/tab_radio_button"
            android:text="@string/black_name"
            />
    </RadioGroup>

</LinearLayout>