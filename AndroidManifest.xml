<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.phoneassistant"
    android:versionCode="102"
    android:versionName="1.0.2" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_LOGS"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.android.phoneassistant.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.phoneassistant.entry.EntryActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.phoneassistant.AppMainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.android.phoneassistant.intent.action.PHONEASSISTANT" />
                <category android:name="com.android.phoneassistant.intent.category.PHONEASSISTANT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.phoneassistant.wifi.WifiMainInterfacece"
            android:configChanges="orientation|screenSize"
            android:label="@string/wifi_admin" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.phoneassistant.settings.PhoneAssistantSettings"
            android:configChanges="orientation|screenSize"
            android:label="@string/action_settings" >
        </activity>

        <service
            android:name="com.android.phoneassistant.service.PhoneAssistantServicece"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.android.phoneassistant.action.INCOMING_PHONE" />
                <action android:name="com.android.phoneassistant.action.OUTGOING_PHONE" />
                <action android:name="com.android.phoneassistant.action.PHONE_STATE" />
            </intent-filter>
        </service>

        <receiver android:name="com.android.phoneassistant.receiver.CallStateReceiverer" >
            <intent-filter>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.android.phoneassistant.provider.PhoneAssistantProvider"
            android:authorities="com.android.phoneassistant" />

        <activity
            android:name="com.android.phoneassistant.customer.CustomerDetailActivityty"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/detail" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.phoneassistant.black.SelectBlackListst"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden"
            />
    </application>

</manifest>